{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es5", "es2015", "es2016", "dom"]
  },
  "include": [
    "./src/**/**/*"
  ]
}